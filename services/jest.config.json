{
  "verbose": true,
  "testEnvironment": "node",
  "testTimeout": 10000,
  "roots": [
    "./src/",
    "./tests/"
  ],
  "transform": {
    ".(ts|tsx)": "<rootDir>/node_modules/ts-jest"
  },
  "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ]
}